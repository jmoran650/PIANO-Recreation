{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "./eslint.config.mjs",
    "src/**/*",
    "index.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/createAgentBot.ts",
    "goalPlanAppServer.ts",
    "treeviewer/goal-planner-app/src/goalPlanner.ts",
    "types/**/*",
    "src/botWorker.ts",
    "./webpack.config.cjs"
  ],
  "exclude": ["node_modules", "dist/*", "**/*.test.ts"]
}
